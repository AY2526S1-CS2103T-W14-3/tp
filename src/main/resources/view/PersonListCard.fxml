<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="250" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="0" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="phone" styleClass="cell_small_label" />
      <Label fx:id="email" styleClass="cell_small_label" />
    </VBox>

    <StackPane fx:id="feedingBox"
               GridPane.columnIndex="1"
               GridPane.halignment="RIGHT"
               GridPane.valignment="CENTER"
               GridPane.hgrow="NEVER"
               maxWidth="150"
               minHeight="80"
               style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-width: 2; -fx-background-radius: 10; -fx-border-radius: 10;">
      <GridPane.margin>
        <Insets right="12" />
      </GridPane.margin>
      <maxHeight>
        <Region fx:constant="USE_PREF_SIZE" />
      </maxHeight>
      <padding>
        <Insets top="5" right="15" bottom="5" left="5" />
      </padding>

      <VBox fx:id="feedingVBox">
        <padding>
          <Insets top="5" right="5" bottom="5" left="10" />
        </padding>
        <Label fx:id="animalName" styleClass="cell_big_label" />
        <Label fx:id="feedingDate" styleClass="cell_small_label" />
        <Label fx:id="feedingTime" styleClass="cell_small_label" />
      </VBox>
    </StackPane>
  </GridPane>
</HBox>
