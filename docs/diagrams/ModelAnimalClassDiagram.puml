@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class ModelManager
Class UserPrefs

Class UniqueAnimalList
Class "<<abstract>>\nContact" as Contact
Class Animal
Class "<<abstract>>\nName" as Name
Class AnimalName
Class Description
Class Location
Class Tag
Class UUID

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniqueAnimalList
UniqueAnimalList --> "~*all" Animal

Animal -up-|> Contact
Contact *--> "1" Name : name
Contact *--> "*" Tag : tags

AnimalName -up-|> Name
AnimalName .[hidden].> Animal

Animal *--> "1" UUID : id
Animal *--> "1" Description : description
Animal *--> "1" Location : location
Animal *--> "*" UUID : feedingSessionIds

Animal -[hidden]up--> I
UniqueAnimalList -[hidden]right-> I

Description -[hidden]right-> Location

ModelManager --> "~* filtered" Animal

note left of AnimalName
  Runtime type of
  Contact.name for
  Animal objects
end note

@enduml
